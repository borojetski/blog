  <div class="max-w-screen-sm md:max-w-screen-md mx-auto px-8">
    <p class="text-sm py-2 text-right">
      {% if site.mastodon != "" %}<a href={{ site.mastodon }}>Mastodon</a>
      {% endif %}

      {% if site.github != "" %}
